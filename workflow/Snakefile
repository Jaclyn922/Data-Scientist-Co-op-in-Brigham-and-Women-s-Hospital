TARGETS = ['metadata/experiments.tsv']
rule: input: TARGETS

rule extract_sample:
    input:
    output: df="tmp/samples.csv"
    conda: "envs/sqlalchemy.yaml"
    script: "scripts/python/extract_sample.py"

